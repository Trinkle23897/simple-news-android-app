        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/column_size"
        android:layout_marginTop="30dp"
        android:text="体育新闻" />
    <TextView
        android:id="@+id/col5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/column_size"
        android:layout_marginTop="30dp"
        android:text="台湾新闻" />
    <TextView
        android:id="@+id/col6"
        android:layout_width="wrap_content"
